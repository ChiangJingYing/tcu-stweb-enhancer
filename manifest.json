{
    "manifest_version": 3,
    "name": "TCU StWeb Tool",
    "version": "1.0",
    "description": "Automated modifications for TCU StWeb Stmain.php",
    "permissions": [
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://admin.tcu.edu.tw/TCUstweb/Stmain.php*"
            ],
            "js": [
                "utils.js",
                "pinningManager.js",
                "tasks.js",
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "pin_icon.png"
            ],
            "matches": [
                "https://admin.tcu.edu.tw/*"
            ]
        }
    ]
}